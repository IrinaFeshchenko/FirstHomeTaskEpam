@model Neibour.Models.User
@{
    string imgSrc = null;
    ViewData["Title"] = "Edit_profile";
    if (Model.Profile != null)
    {
        var base64 = Convert.ToBase64String(Model.Profile);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}
<style>
    * {box-sizing: border-box;}
body {
  background: #e6f4fd;
  font-family: 'Roboto', sans-serif;
}
.ui-form {
  max-width: 700px;
  padding: 80px 30px 30px;
  margin: 50px auto 30px;
  background: white;
}
.ui-form h3 {
  position: relative;
  z-index: 5;
  margin: 0 0 60px;
  text-align: center;
  color: #4a90e2;
  font-size: 30px;
  font-weight: normal;
}
.ui-form h3:before {
  content: "";
  position: absolute;
  z-index: -1;
  left: 60px;
  top: -30px;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: #fee8e4;
}
.ui-form h3:after {
  content: "";
  position: absolute;
  z-index: -1;
  right: 50px;
  top: -40px;
  width: 0;
  height: 0;
  border-left: 55px solid transparent;
  border-right: 55px solid transparent;
  border-bottom: 90px solid #ffe3b5;
}
.form-row {
  position: relative;
  margin-bottom: 40px;
}
.form-control {
  display: block;
  width: 100%;
  padding: 0 10px;
  line-height: 40px;
  font-family: 'Roboto', sans-serif;
  background: none;
  border-width: 0;
  border-bottom: 2px solid #4a90e2;
  transition: all 0.2s ease;
}
.form-row label {
  position: absolute;
  left: 13px;
  color: #F77A52;
  margin-bottom: 10px;
  font-size: 14px;
  font-weight: 300;
  margin-left: -14px;
  transform: translateY(-35px);
  transition: all 0.2s ease;
}
.form-row input:focus {
  outline: 0;
  border-color: #F77A52;
}
    .form-row input:focus + label,
    .form-row input:valid + label {
        transform: translateY(-10px);
        margin-left: -14px;
        font-size: 14px;
        font-weight: 400;
        outline: 0;
        border-color: #F77A52;
        color: #F77A52;
    }
.ui-form input[type="submit"] {
  width: 100%;
  padding: 0;
  line-height: 42px;
  background: #4a90e2;
  border-width: 0;
  color: white;
  font-size: 20px;
}
.ui-form p {
  margin: 0;
  padding-top: 10px;
}
select {
    border: 1px solid #111;
   background: transparent;
   width: 150px;
   padding: 5px 35px 5px 5px;
   font-size: 16px;
   border: 1px solid #ccc;
   height: 34px;
   -webkit-appearance: none;
   -moz-appearance: none;
   appearance: none;
}
.inputfile {
	width: 300px;
	height: 30px;
	opacity: 0;
	overflow: hidden;
	position: absolute;
	z-index: -1;
}
.inputfile + label {
    font-size: 20px;
    font-weight: 700;
    color: black;
    background-color: lightskyblue;
    display: inline-block;
}
.inputfile:focus + label,
.inputfile + label:hover {
    background-color: deepskyblue;
}
.inputfile + label {
	cursor: pointer; /* "hand" cursor */
}
    .space {
        margin-bottom:10px;
    }

        button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    button:hover, a:hover {
        opacity: 0.7;
    }

    .menu {
        position: absolute;
        padding: 0;
        display: flex;
    }

    .menu li {
        position: relative;
        list-style: none;
    }

    .menu li a {
        position: relative;
        display: block;
        color: cornflowerblue;
        line-height: 40px;
        text-align: center;
        text-decoration: none;
        text-transform: uppercase;
        transition: .5s;
        box-sizing: border-box;
    }

    .menu li a span {
        position: absolute;
        width: 25%;
        height: 100%;
        background-color: cornflowerblue;
        z-index: -1;
        transform-origin: top;
        transform: scaleY(0);
        transition: transform .5s;
    }
    .prof_space {
        margin-top: 25px;
    }
    .menu li a:hover {
        color: #fff;
        text-decoration: none;
    }

    .menu li a:hover span {
        transform-origin: bottom;
        transform: scaleY(1);
    }

    .menu li a span:nth-child(1) {
        left: 0;
        transition-delay: 0s;
    }

    .menu li a span:nth-child(2) {
        left: 25%;
        transition-delay: 0.15s;
    }

    .menu li a span:nth-child(3) {
        left: 50%;
        transition-delay: 0.3s;
    }

    .menu li a span:nth-child(4) {
        left: 75%;
        transition-delay: 0.45s;
    }
    .footer_space {
        margin-bottom:40px;
    }
    .header_space {
        margin-top:40px;
    }

</style>
