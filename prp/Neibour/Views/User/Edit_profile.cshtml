        <div class="form-group" style="visibility: hidden; clip: rect(0, 0, 0, 0); position: absolute; ">
            <label asp-for="Passport" class="control-label">Оценка</label>
            <input type="text" asp-for="Passport" class="form-control" />
        </div>
        <div style="visibility: hidden; clip: rect(0, 0, 0, 0);
  position: absolute;">
            <label for="date" asp-for="Birthday">Дата рождения:</label><br />
            <input type="date" asp-for="Birthday" />
            <span asp-validation-for="Birthday" />
        </div>
        <div class="form-group" style="visibility:hidden; clip: rect(0, 0, 0, 0);
  position: absolute;">
            <label asp-for="Purpose" class="control-label">Цель</label>
            <input type="text" asp-for="Purpose" class="form-control" />
        </div>
        <div class="form-group" style="visibility:hidden; clip: rect(0, 0, 0, 0);
  position: absolute;">
            <label asp-for="Email" class="control-label">Почта</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-row">
            <input type="text" asp-for="Password" class="form-control" /><label asp-for="Password" class="control-label">Пароль</label>
        </div>

        <div>
            <label for="date" asp-for="Date_of_registration">Дата реєстрації:</label><br />
            <input type="date" asp-for="Date_of_registration" />
            <span asp-validation-for="Date_of_registration" />
        </div>
        <div class="space"></div>
        @if (Model.Profile != null)
        {
            <img width="150" height="150" src="@imgSrc" />
        }
        else
        {
            <img width="150" height="150" src="~/css/nophoto.jpg" />
        }
        <div class="space"></div>
        </tr>
        <div>
            <input type="file" asp-for="Profile" class="inputfile" /><label asp-for="Profile" class="control-label" style="margin-bottom:10px;">Змінити зображення профіля</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Зберігти" class="btn btn-default" />
        </div>
    </form>

